<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.rupeebag.app.activity.Home">

    <RelativeLayout
        android:id="@+id/container_points"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bag">

        <TextView
            android:id="@+id/str_your_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:padding="@dimen/pad_sm"
            android:text="RUPEE COINS"
            android:textColor="@color/colorWhite"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/txt_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/str_your_points"
            android:layout_centerInParent="true"
            android:text="270"
            android:textColor="@color/colorWhite"
            android:textSize="18pt" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/pad_md">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_black_24dp" />

        <TextView
            android:id="@+id/str_your_points1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_sm"
            android:text="7506409005"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/pad_xmd">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_redeem_white_36dp" />
    <TextView
        android:textColor="@color/colorWhite"
        android:padding="@dimen/pad_sm"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:textSize="10pt"
        android:layout_height="wrap_content"
        android:text="Redeem Voucher"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_keyboard_arrow_right_white_36dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/pad_xl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/pad_xmd">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_history_white_36dp" />
    <TextView
        android:textColor="@color/colorWhite"
        android:padding="@dimen/pad_sm"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:textSize="10pt"
        android:layout_height="wrap_content"
        android:text="Coins History"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_expand_more_white_36dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_coin_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
